@model WebApplication.Models.RewardsViewModel

@{
    ViewBag.Title = "AddRewards";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Удалить награду</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h3>Выберите награду:</h3>
            <div class="col-md-10">
                @Html.ListBoxFor(model => model.SelectedRewards, Model.Rewards, new { id = "listbox", htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Удалить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к редактированию", "Edit")
</div>

